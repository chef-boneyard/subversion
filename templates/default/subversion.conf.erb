<Location /svn>

  DAV svn

  SVNParentPath <%= node['subversion']['repo_dir'] %>

  SVNListParentPath <%= node['subversion']['list_parent_path'] %>

  AuthzSVNAccessFile <%= node['subversion']['repo_dir'] %>/svn_access

  AuthType Basic

  AuthName "Subversion repository"

  AuthUserFile <%= node['subversion']['repo_dir'] %>/htpasswd

  Require valid-user

</Location>
