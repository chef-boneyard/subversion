<Location /svn>

  DAV <%= node['subversion']['server_name'] %>

  SVNPath <%= "#{node['subversion']['repo_dir']}/#{node['subversion']['repo_name']}" %>

  AuthType Basic

  AuthName "Subversion repository"

  AuthUserFile <%= "#{node['subversion']['repo_dir']}/htpasswd" %>

  Require valid-user

</Location>
